<div class="container">
  <div class="post-new">
    <%= form_with model: [@user, @management], local: true do |f| %>
      <div class="form">
        <div class="form-body">
          <% @management.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <%= f.label "投稿するペット" %><br>
          <% @pets.each do |pet| %>
            <%= f.radio_button :pet_id, pet.id %><%= pet.name %><br>
          <% end %>

          <%= f.label "title" %><br>
          <%= f.text_field :title %><br>

          <%= f.label "start_time" %><br>
          <%= f.datetime_select :start_time %><br>

          <%= f.label "content" %><br>
          <%= f.text_area :content %><br>

          <%= f.submit "追加する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>