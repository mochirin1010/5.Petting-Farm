<div class="container">
  <div class="post-new">
    <h1>投稿する</h1>
    <%= form_with url: "/posts/create" do |f| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
           <%= f.label "写真の投稿" %><br>
           <%= f.file_field :image %><br>
           <%= f.text_area :content, value: @post.content %><br>
           <%= f.submit "投稿" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
