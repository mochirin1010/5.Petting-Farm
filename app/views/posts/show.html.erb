<div class="container">
  

  <% if @post.user_id == current_user.id %>
    <% breadcrumb :mypost_parent_category %>
  <% elsif @post.root? %>
    <% breadcrumb :post_parent_category %>
  <% end %>
  <%= render "layouts/breadcrumbs" %>

  <div class="posts-show-item">
    <div class="user_box">
      <div class="post-user-img">
        <%= link_to user_path(@user) do %>
          <% if @user.user_img? %>
            <%= image_tag @user.user_img.url %>
          <% else %>
            <img src="/img/dog.png">
          <% end %>
        <% end %>
      </div>
      <div class="post-user-name">
          <%= link_to(@user.username, user_path(@user)) %>
      </div>
    </div>

    <div class="show-post-img"><%= image_tag @post.image.url %></div>
    <p><%= @post.content %></p>

    <div class="post-time">
      <%= @post.created_at %>
    </div>

    <div id="like-btn-<%= @post.id %>" class="like-btn">
      <%= render partial: 'likes/like', locals: { post: @post } %>
    </div>

    <div class="post-show-pet">
      <div class="post-show-pet-img">
        <%= link_to pet_path(@pet) do %>
          <% if @pet.pet_img? %>
            <%= image_tag @pet.pet_img.url %>
          <% else %>
            <img src="/img/dog.png">
          <% end %>
        <% end %>
      </div>
      <p><%= link_to @pet.name, pet_path(@pet) %></p>
    </div>

    <% if @post.user_id == current_user.id %>
      <div class="post-menus">
        <%= link_to "編集", edit_post_path(@post) %>
        <%= link_to "削除", post_path(@post), :method => :delete %>
      </div>
    <% end %>
  </div>
</div>
