<div class="container home-container">
  <h1>Petting Farm</h1>
  <p>ペットの写真を投稿するサイトです。ペットの可愛い瞬間、面白い瞬間などを投稿してみんなに共有していきましょう！</p>

  <h2>いいねランキング</h2>
  <div class="top-post posts-box">
    <% @all_ranks.each.with_index(1) do |post, i| %>
      <div class="posts-index-item ranking-item">
        <h3><span class="material-icons ranking-icon">military_tech</span>第<%= i %>位</h3>
        <div class="user_box">
          <div class="post-user-img">
            <% if post.user.user_img? %>
              <%= image_tag post.user.user_img.url %>
            <% else %>
              <img src="/img/dog.png">
            <% end %>
          </div>
          <div class="post-user-name">
            <%= post.user.username %>
          </div>
        </div>
        <div class="post-content">
          <%= link_to post_path(post) do %>
            <div class="index-post-img"><%= image_tag post.image.url %></div>
          <% end %>
          <div id="like-btn-<%= post.id %>" class="like-btn">
            <%= render partial: 'likes/like', locals: { post: post } %>
          </div>
          <p><%= link_to(post.content, post_path(post)) %></p>
        </div>
      </div>
    <% end %>
  </div>

  <h2>新着の投稿</h2>
  <div class="top-post posts-box">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="user_box">
          <div class="post-user-img">
            <% if post.user.user_img? %>
              <%= image_tag post.user.user_img.url %>
            <% else %>
              <img src="/img/dog.png">
            <% end %>
          </div>
          <div class="post-user-name">
            <%= post.user.username %>
          </div>
        </div>
        <div class="post-content">
          <%= link_to post_path(post) do %>
            <div class="index-post-img"><%= image_tag post.image.url %></div>
          <% end %>
          <p><%= link_to(post.content, post_path(post)) %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="btn-box">
    <%= link_to '新規登録', new_user_registration_path, class: "btn01" %>
    <%= link_to 'ログイン', new_user_session_path, class: "btn01" %>
  </div>
</div>