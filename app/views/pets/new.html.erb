<div class="container">
  <div class="post-new">
    <h1>ペットを登録する</h1>
    <%= form_with model: @pet, method: :post do |f| %>
      <div class="form">
        <div class="form-body field-img">
          <% @pet.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
           <%= f.label "ペットの名前 " %><span>必須</span><br>
           <%= f.text_field :name %><br>

           <%= f.label "年齢" %><br>
           <%= f.text_field :age %><br>

           <%= f.label "種類" %><br>
           <%= f.text_field :pet_type %><br>

           <%= f.label "性別" %><br>
           <%= f.text_field :gender %><br>

           <%= f.label "ペットの紹介（150字まで）" %><br>
           <%= f.text_area :introduction %><br>

           <%= f.label "ペットの写真" %><br>
           <%= f.file_field :pet_img, id: :file_image %><br>
           <% if @pet.pet_img.present? %>
             <%= image_tag @pet.pet_img, id: :img_prev %>
           <% else %>
             <%= image_tag "/img/dog.png", id: :img_prev %>
           <% end %><br>
           
           <%= f.submit "登録する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
    <div class="btn-box">
      <%= link_to "戻る", user_path(current_user), class: "btn01" %>
    </div>
  </div>
</div>
