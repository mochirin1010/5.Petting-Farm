<div class="container">
  <h1>編集する</h1>
    <%= form_with url: pet_path(@pet), :method => :patch do |f| %>
      <div class="form">
        <div class="form-body field-img">
          <% @pet.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <%= f.label "ペットの名前" %><br>
          <%= f.text_field :name, value: @pet.name %><br>
          <%= f.label "年齢" %><br>
          <%= f.text_field :age, value: @pet.age %><br>
          <%= f.label "種類" %><br>
          <%= f.text_field :pet_type, value: @pet.pet_type %><br>
          <%= f.label "性別" %><br>
          <%= f.text_field :gender, value: @pet.gender %><br>
          <%= f.label "ペットの紹介（150字まで）" %><br>
          <%= f.text_area :introduction, value: @pet.introduction %><br>
          <%= f.label "ペットの写真" %><br>
          <%= f.file_field :pet_img, id: :file_image %><br>
          <% if @pet.pet_img.present? %>
            <%= image_tag @pet.pet_img.url, id: :img_prev %>
            <%= f.hidden_field :pet_img_cache %>
          <% else %>
            <%= image_tag "/img/dog.png", id: :img_prev %>
          <% end %><br>
          <%= f.submit "保存する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
    <div class="btn-box">
      <%= link_to "戻る", pet_path(@pet), class: "btn01" %>
    </div>
</div>